<Window x:Class="DMR2020.View.ConfirmPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DMR2020.View"
        mc:Ignorable="d"
        Title="ConfirmPasswordWindow" Height="140" Width="200" ResizeMode="NoResize">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="Input Password" 
                   Margin="0,0,0,10"/>
        <PasswordBox x:Name="PwdInput"
                     Height="30" VerticalAlignment="Center" KeyDown="TxtInput_KeyDown"/>
    </StackPanel>
</Window>
