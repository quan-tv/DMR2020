<Window x:Class="DMR2020.View.EditTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Test" Height="500" Width="650"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner" Background="WhiteSmoke"
        Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Test name -->
            <RowDefinition Height="Auto"/>
            <!-- Advanced + Results -->
            <RowDefinition Height="*"/>
            <!-- Temperature + Spec table + Tan Delta / Torque Range -->
            <RowDefinition Height="Auto"/>
            <!-- Save / Exit -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <!-- Bên trái -->
            <ColumnDefinition Width="4*"/>
            <!-- Bên phải -->
        </Grid.ColumnDefinitions>

        <!-- ====== TEST NAME ====== -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    Margin="0,0,0,8">
            <TextBlock Text="Test Name"
                       FontWeight="Bold"
                       FontSize="14"
                       VerticalAlignment="Center"/>
            <TextBox x:Name="TxtTestName"
                     Width="250"
                     Margin="10,0,0,0"
                     VerticalAlignment="Center"/>
        </StackPanel>

        <!-- ====== ADVANCED (TRÁI TRÊN) ====== -->
        <GroupBox Grid.Row="1" Grid.Column="0"
                  Header="Advanced"
                  Margin="0,0,8,8">
            <StackPanel>
                <!-- Test Time -->
                <StackPanel Orientation="Horizontal" Margin="0 0 0 6">
                    <TextBlock Width="72" Text="Test Time" VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtTestTime" Width="120" Padding="2 1"/>
                    <TextBlock Text=" min." VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Torque Unit -->
                <StackPanel Orientation="Horizontal" Margin="0 0 0 6">
                    <TextBlock Width="72" Text="Torque Unit" VerticalAlignment="Center"/>
                    <ComboBox x:Name="CboTorqueUnit" Width="72"
                              SelectedIndex="0">
                        <ComboBoxItem Content="lb-in"/>
                        <ComboBoxItem Content="Kg-cm"/>
                        <ComboBoxItem Content="dN-m"/>
                        <ComboBoxItem Content="N-m"/>
                    </ComboBox>
                </StackPanel>

                <!-- Time Unit -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Width="72" Text="Time Unit" VerticalAlignment="Center"/>
                    <ComboBox x:Name="CboTimeUnit" Width="72"
                              SelectedIndex="0">
                        <ComboBoxItem Content="mm:ss"/>
                        <ComboBoxItem Content="mm."/>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- ====== RESULTS (PHẢI TRÊN) ====== -->
        <GroupBox Grid.Row="1" Grid.Column="1"
                  Header="Results"
                  Margin="0,0,0,0">
            <ItemsControl x:Name="IcLstFeaturePoints" ItemsSource="{Binding CVResults}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 3">
                            <TextBlock Text="{Binding Title}" Width="72" VerticalAlignment="Center"/>
                            <ComboBox Width="60" Margin="6 0 0 0"
                                      ItemsSource="{Binding DataContext.LstFeaturePointTypes, RelativeSource={RelativeSource AncestorType=Window}}"
                                      SelectedItem="{Binding Type}"/>
                            <TextBox Width="60" Margin="6 0 0 0" Text="{Binding TypeValue}" VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </GroupBox>

        <!-- ====== TEMPERATURE + ARC (TRÁI DƯỚI) ====== -->
        <StackPanel Grid.Row="2" Grid.Column="0"
                    Orientation="Vertical"
                    Margin="0,0,8,8">
            <GroupBox Header="Temperature" Margin="0,0,0,8">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Test Temperature -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Test Temperature"
                               VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtTestTemp"
                             Grid.Row="0" Grid.Column="1"
                             Background="WhiteSmoke"
                             Width="60"
                             Margin="8,0,4,4"/>
                    <TextBlock Grid.Row="0" Grid.Column="2"
                               HorizontalAlignment="Left"
                               Text="°C"
                               VerticalAlignment="Center"/>
                </Grid>
            </GroupBox>

            <!-- ====== ARC + TAN DELTA (CÙNG 1 HÀNG) ====== -->
            <Grid Grid.Row="1" Margin="0,0,8,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Arc -->
                <TextBlock Text="Arc."
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="CboArc"
                          SelectedIndex="0"
                          Grid.Column="1"
                          Margin="8,0,90,0"
                          Grid.ColumnSpan="2">
                    <ComboBoxItem Content="0.5"/>
                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="5"/>
                </ComboBox>

                <!-- Tan Delta -->
                <TextBlock Text="Tan Delta"
                           Grid.Column="2"
                           VerticalAlignment="Center"
                           Margin="40,0,8,0"/>
                <CheckBox x:Name="ChkTanDelta"
                          Grid.Column="3"
                          IsChecked="True"
                          VerticalAlignment="Center"
                          Height="16"
                          Margin="4,0,0,0"/>
            </Grid>
        </StackPanel>

        <!-- ====== SPEC TABLE + TORQUE RANGE (PHẢI DƯỚI) ====== -->
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Spec table -->
            <GroupBox Header="Spec."
              Grid.Row="0"
              Margin="0,0,0,8">
                <DataGrid x:Name="DgSpec"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          CanUserResizeColumns="False"
          HeadersVisibility="Column"

          RowHeight="25"
          ColumnHeaderHeight="25"

          ScrollViewer.VerticalScrollBarVisibility="Disabled"
          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            RequestBringIntoView="DgSpec_RequestBringIntoView"
          Height="175"

                    Margin="4">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <EventSetter Event="RequestBringIntoView"
                         Handler="DgSpecRow_RequestBringIntoView"/>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>

                        <DataGridTextColumn Header="Spec. Input"
                            Width="*"
                            Binding="{Binding Spec}"
                            IsReadOnly="True" />

                        <DataGridTextColumn Header="Minimum"
                            Width="80"
                            Binding="{Binding Min}" />

                        <DataGridTextColumn Header="Maximum"
                            Width="80"
                            Binding="{Binding Max}" />

                        <DataGridTemplateColumn Header="" Width="40">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsChecked}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>

                </DataGrid>
            </GroupBox>

            <!-- Torque Range -->
            <StackPanel Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Right">
                <TextBlock Text="Torque Range"
                   VerticalAlignment="Center"
                   Margin="0,0,8,0"/>
                <ComboBox x:Name="CboTorqueRange"
                  Width="70"
                  Margin="0,0,11,0"
                  SelectedIndex="0">
                    <ComboBoxItem Content="Auto"/>
                    <ComboBoxItem Content="5"/>
                    <ComboBoxItem Content="10"/>
                    <ComboBoxItem Content="25"/>
                    <ComboBoxItem Content="50"/>
                    <ComboBoxItem Content="100"/>
                    <ComboBoxItem Content="200"/>
                </ComboBox>
            </StackPanel>
        </Grid>



        <!-- ====== NÚT SAVE / EXIT ====== -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,8,0,0">
            <Button x:Name="BtnSave"
                    Content="Save"
                    Width="100"
                    Margin="0,0,40,0"
                    Padding="10,4"
                    Click="BtnSave_Click"/>
            <Button x:Name="BtnExit"
                    Content="Exit"
                    Width="100"
                    Padding="10,4"
                    Click="BtnExit_Click"/>
        </StackPanel>
    </Grid>
</Window>
