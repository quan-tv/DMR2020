<Window x:Class="DMR2020.View.EditTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Test" Height="500" Width="650"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Test name -->
            <RowDefinition Height="Auto"/>
            <!-- Advanced + Results -->
            <RowDefinition Height="*"/>
            <!-- Temperature + Spec table + Tan Delta / Torque Range -->
            <RowDefinition Height="Auto"/>
            <!-- Save / Exit -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <!-- Bên trái -->
            <ColumnDefinition Width="4*"/>
            <!-- Bên phải -->
        </Grid.ColumnDefinitions>

        <!-- ====== TEST NAME ====== -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    Margin="0,0,0,8">
            <TextBlock Text="Test Name"
                       FontWeight="Bold"
                       FontSize="16"
                       VerticalAlignment="Center"/>
            <TextBox x:Name="TxtTestName"
                     Width="250"
                     Margin="10,0,0,0"
                     Background="WhiteSmoke"
                     VerticalAlignment="Center"/>
        </StackPanel>

        <!-- ====== ADVANCED (TRÁI TRÊN) ====== -->
        <GroupBox Grid.Row="1" Grid.Column="0"
                  Header="Advanced"
                  Margin="0,0,8,8">
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Test Time -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Test Time"
                           VerticalAlignment="Center" />
                <TextBox x:Name="TxtTestTime"
                         Grid.Row="0" Grid.Column="1"
                         Background="WhiteSmoke"
                         Margin="26,0,39,3"/>
                <TextBlock Grid.Column="1"
                           Text="min."
                           VerticalAlignment="Center"
                           Height="14"
                           Margin="138,0,6,0"
                           RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>

                <!-- Torque Unit -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Torque Unit"
                           Margin="0,4,0,0"
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="CboTorqueUnit"
                          Grid.Row="1" Grid.Column="1"
                          Margin="26,4,6,6"
                          SelectedIndex="0">
                    <ComboBoxItem Content="lb-in"/>
                    <ComboBoxItem Content="Kg-cm"/>
                    <ComboBoxItem Content="dN-m"/>
                    <ComboBoxItem Content="N-m"/>
                </ComboBox>

                <!-- Time Unit -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Time Unit"
                           Margin="0,4,0,0"
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="CboTimeUnit"
                          Grid.Row="2" Grid.Column="1"
                          SelectedIndex="0"
                          Margin="26,4,6,5">
                    <ComboBoxItem Content="mm:ss"/>
                    <ComboBoxItem Content="mm."/>
                </ComboBox>
            </Grid>
        </GroupBox>

        <!-- ====== RESULTS (PHẢI TRÊN) ====== -->
        <GroupBox Grid.Row="1" Grid.Column="1"
                  Header="Results"
                  Margin="0,0,0,0">
            <Grid Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>

                <!-- Result 1 -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Result 1"
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="CboResult1"
                          Grid.Row="0" Grid.Column="1"
                          SelectedIndex="0"
                          Width="50"
                          HorizontalAlignment="Left"
                          Margin="8,0,0,4">
                    <ComboBoxItem Content="ts"/>
                    <ComboBoxItem Content="tc"/>
                    <ComboBoxItem Content="Tc"/>
                    <ComboBoxItem Content="T"/>
                    <ComboBoxItem Content="t"/>
                </ComboBox>
                <TextBox x:Name="TxtResult1"
                         Grid.Row="0" Grid.Column="1"
                         Background="WhiteSmoke"
                         Margin="70,0,0,4"
                         Grid.ColumnSpan="2"/>

                <!-- Result 2 -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Result 2"
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="CboResult2"
                          Grid.Row="1" Grid.Column="1"
                          SelectedIndex="0"
                          Width="50"
                          HorizontalAlignment="Left"
                          Margin="8,0,120,4">
                    <ComboBoxItem Content="ts"/>
                    <ComboBoxItem Content="tc"/>
                    <ComboBoxItem Content="Tc"/>
                    <ComboBoxItem Content="T"/>
                    <ComboBoxItem Content="t"/>
                </ComboBox>
                <TextBox x:Name="TxtResult2"
                         Grid.Row="1" Grid.Column="1"
                         Background="WhiteSmoke"
                         Margin="70,0,0,4"
                         Grid.ColumnSpan="2"/>

                <!-- Result 3 -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Result 3"
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="CboResult3"
                          Grid.Row="2" Grid.Column="1"
                          SelectedIndex="0"
                          Width="50"
                          HorizontalAlignment="Left"
                          Margin="8,0,4,4">
                    <ComboBoxItem Content="ts"/>
                    <ComboBoxItem Content="tc"/>
                    <ComboBoxItem Content="Tc"/>
                    <ComboBoxItem Content="T"/>
                    <ComboBoxItem Content="t"/>
                </ComboBox>
                <TextBox x:Name="TxtResult3"
                         Grid.Row="2" Grid.Column="1"
                         Background="WhiteSmoke"
                         Margin="70,0,0,4"
                         Grid.ColumnSpan="2"/>

                <!-- Result 4 -->
                <TextBlock Grid.Row="3" Grid.Column="0"
                           Text="Result 4"
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="CboResult4"
                          Grid.Row="3" Grid.Column="1"
                          SelectedIndex="0"
                          Width="50"
                          HorizontalAlignment="Left"
                          Margin="8,0,0,4">
                    <ComboBoxItem Content="ts"/>
                    <ComboBoxItem Content="tc"/>
                    <ComboBoxItem Content="Tc"/>
                    <ComboBoxItem Content="T"/>
                    <ComboBoxItem Content="t"/>
                </ComboBox>
                <TextBox x:Name="TxtResult4"
                         Grid.Row="3" Grid.Column="1"
                         Background="WhiteSmoke"
                         Margin="70,0,0,4"
                         Grid.ColumnSpan="2"/>
            </Grid>
        </GroupBox>

        <!-- ====== TEMPERATURE + ARC (TRÁI DƯỚI) ====== -->
        <StackPanel Grid.Row="2" Grid.Column="0"
                    Orientation="Vertical"
                    Margin="0,0,8,8">
            <GroupBox Header="Temperature" Margin="0,0,0,8">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Test Temperature -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Test Temperature"
                               VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtTestTemp"
                             Grid.Row="0" Grid.Column="1"
                             Background="WhiteSmoke"
                             Width="60"
                             Margin="8,0,4,4"/>
                    <TextBlock Grid.Row="0" Grid.Column="2"
                               HorizontalAlignment="Left"
                               Text="°C"
                               VerticalAlignment="Center"/>
                </Grid>
            </GroupBox>

            <!-- ====== ARC + TAN DELTA (CÙNG 1 HÀNG) ====== -->
            <Grid Grid.Row="1" Margin="0,0,8,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Arc -->
                <TextBlock Text="Arc."
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="CboArc"
                          SelectedIndex="0"
                          Grid.Column="1"
                          Margin="8,0,90,0"
                          Grid.ColumnSpan="2">
                    <ComboBoxItem Content="0.5"/>
                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="5"/>
                </ComboBox>

                <!-- Tan Delta -->
                <TextBlock Text="Tan Delta"
                           Grid.Column="2"
                           VerticalAlignment="Center"
                           Margin="40,0,8,0"/>
                <CheckBox x:Name="ChkTanDelta"
                          Grid.Column="3"
                          IsChecked="True"
                          VerticalAlignment="Center"
                          Height="16"
                          Margin="4,0,0,0"/>
            </Grid>
        </StackPanel>

        <!-- ====== SPEC TABLE + TORQUE RANGE (PHẢI DƯỚI) ====== -->
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Spec table -->
            <GroupBox Header="Spec."
              Grid.Row="0"
              Margin="0,0,0,8">
                <DataGrid x:Name="DgSpec"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  CanUserResizeColumns="False"
                  RowHeight="25"
                  Height="175"
                  ScrollViewer.VerticalScrollBarVisibility="Disabled"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  PreviewMouseWheel="DgSpec_PreviewMouseWheel"
                  Validation.ErrorTemplate="{x:Null}"
                  Validation.ValidationAdornerSite="{x:Null}"
                  Margin="4">

                    <!-- ⚠⚠ Ở ĐÂY LÀ DataGrid.Columns – NẰM TRỰC TIẾP BÊN TRONG DataGrid ⚠⚠ -->
                    <DataGrid.Columns>

                        <!-- Cột 1: Spec. Input -->
                        <DataGridTextColumn Header="Spec. Input"
                                    Width="*"
                                    Binding="{Binding Spec}"
                                    IsReadOnly="True" />

                        <!-- Cột 2: Minimum -->
                        <DataGridTextColumn Header="Minimum"
                                    Width="80"
                                    Binding="{Binding Min}">
                            <DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox">
                                    <EventSetter Event="PreviewTextInput" Handler="SpecNumber_PreviewTextInput"/>
                                    <EventSetter Event="PreviewKeyDown" Handler="SpecNumber_PreviewKeyDown"/>
                                </Style>
                            </DataGridTextColumn.EditingElementStyle>
                        </DataGridTextColumn>

                        <!-- Cột 3: Maximum -->
                        <DataGridTextColumn Header="Maximum"
                            Width="80"
                            Binding="{Binding Max}">
                            <DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox">
                                    <EventSetter Event="PreviewTextInput" Handler="SpecNumber_PreviewTextInput"/>
                                    <EventSetter Event="PreviewKeyDown" Handler="SpecNumber_PreviewKeyDown"/>
                                </Style>
                            </DataGridTextColumn.EditingElementStyle>
                        </DataGridTextColumn>

                        <!-- Cột 4: Checkbox cuối, không header -->
                        <DataGridTemplateColumn Header="" Width="40">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsChecked}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Torque Range -->
            <StackPanel Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Right">
                <TextBlock Text="Torque Range"
                   VerticalAlignment="Center"
                   Margin="0,0,8,0"/>
                <ComboBox x:Name="CboTorqueRange"
                  Width="70"
                  Margin="0,0,11,0"
                  SelectedIndex="0">
                    <ComboBoxItem Content="Auto"/>
                    <ComboBoxItem Content="5"/>
                    <ComboBoxItem Content="10"/>
                    <ComboBoxItem Content="25"/>
                    <ComboBoxItem Content="50"/>
                    <ComboBoxItem Content="100"/>
                    <ComboBoxItem Content="200"/>
                </ComboBox>
            </StackPanel>
        </Grid>



        <!-- ====== NÚT SAVE / EXIT ====== -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,8,0,0">
            <Button x:Name="BtnSave"
                    Content="Save"
                    Width="100"
                    Margin="0,0,40,0"
                    Padding="10,4"
                    Click="BtnSave_Click"/>
            <Button x:Name="BtnExit"
                    Content="Exit"
                    Width="100"
                    Padding="10,4"
                    Click="BtnExit_Click"/>
        </StackPanel>
    </Grid>
</Window>
