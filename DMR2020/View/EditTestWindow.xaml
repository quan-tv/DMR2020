<Window x:Class="DMR2020.View.EditTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Test" Height="430" Width="650"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Test name -->
            <RowDefinition Height="Auto"/>
            <!-- Advanced + Results -->
            <RowDefinition Height="*"/>
            <!-- Temperature + Spec table + Tan Delta / Torque Range -->
            <RowDefinition Height="Auto"/>
            <!-- Save / Exit -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <!-- Bên trái -->
            <ColumnDefinition Width="4*"/>
            <!-- Bên phải -->
        </Grid.ColumnDefinitions>

        <!-- ====== TEST NAME ====== -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    Margin="0,0,0,8">
            <TextBlock Text="Test Name"
                       FontWeight="Bold"
                       FontSize="16"
                       VerticalAlignment="Center"/>
            <TextBox x:Name="TxtTestName"
                     Width="250"
                     Margin="10,0,0,0"
                     VerticalAlignment="Center"/>
        </StackPanel>

        <!-- ====== ADVANCED (TRÁI TRÊN) ====== -->
        <GroupBox Grid.Row="1" Grid.Column="0"
                  Header="Advanced"
                  Margin="0,0,8,8">
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Test Time -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Test Time"
                           VerticalAlignment="Center" />
                <TextBox x:Name="TxtTestTime"
                         Grid.Row="0" Grid.Column="1"
                         Width="60"
                         Margin="8,0,4,4"/>
                <TextBlock Grid.Row="0" Grid.Column="2"
                           Text="min."
                           VerticalAlignment="Center" />

                <!-- Torque Unit -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Torque Unit"
                           Margin="0,4,0,0"
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="CboTorqueUnit"
                          Grid.Row="1" Grid.Column="1"
                          Margin="8,4,4,4"
                          Width="90">
                    <ComboBoxItem Content="lb-in"/>
                    <ComboBoxItem Content="kg-cm"/>
                </ComboBox>

                <!-- Time Unit -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Time Unit"
                           Margin="0,4,0,0"
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="CboTimeUnit"
                          Grid.Row="2" Grid.Column="1"
                          Margin="8,4,4,0"
                          Width="90">
                    <ComboBoxItem Content="mm:ss"/>
                    <ComboBoxItem Content="sec"/>
                </ComboBox>
            </Grid>
        </GroupBox>

        <!-- ====== RESULTS (PHẢI TRÊN) ====== -->
        <GroupBox Grid.Row="1" Grid.Column="1"
                  Header="Results"
                  Margin="0,0,0,0">
            <Grid Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>

                <!-- Result 1 -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Result 1"
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="CboResult1"
                          Grid.Row="0" Grid.Column="1"
                          Margin="8,0,118,4">
                    <ComboBoxItem Content="ts"/>
                    <ComboBoxItem Content="tc"/>
                </ComboBox>
                <TextBox x:Name="TxtResult1"
                         Grid.Row="0" Grid.Column="2"
                         Margin="4,0,0,4"/>

                <!-- Result 2 -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Result 2"
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="CboResult2"
                          Grid.Row="1" Grid.Column="1"
                          Margin="8,0,4,4">
                    <ComboBoxItem Content="ts"/>
                    <ComboBoxItem Content="tc"/>
                </ComboBox>
                <TextBox x:Name="TxtResult2"
                         Grid.Row="1" Grid.Column="2"
                         Margin="4,0,0,4"/>

                <!-- Result 3 -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Result 3"
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="CboResult3"
                          Grid.Row="2" Grid.Column="1"
                          Margin="8,0,4,4">
                    <ComboBoxItem Content="ts"/>
                    <ComboBoxItem Content="tc"/>
                </ComboBox>
                <TextBox x:Name="TxtResult3"
                         Grid.Row="2" Grid.Column="2"
                         Margin="4,0,0,4"/>

                <!-- Result 4 -->
                <TextBlock Grid.Row="3" Grid.Column="0"
                           Text="Result 4"
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="CboResult4"
                          Grid.Row="3" Grid.Column="1"
                          Margin="8,0,4,0">
                    <ComboBoxItem Content="ts"/>
                    <ComboBoxItem Content="tc"/>
                </ComboBox>
                <TextBox x:Name="TxtResult4"
                         Grid.Row="3" Grid.Column="2"
                         Margin="4,0,0,0"/>
            </Grid>
        </GroupBox>

        <!-- ====== TEMPERATURE + ARC (TRÁI DƯỚI) ====== -->
        <StackPanel Grid.Row="2" Grid.Column="0"
                    Orientation="Vertical"
                    Margin="0,0,8,8">
            <GroupBox Header="Temperature" Margin="0,0,0,8">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Test Temperature -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Test Temperature"
                               VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtTestTemp"
                             Grid.Row="0" Grid.Column="1"
                             Width="60"
                             Margin="8,0,4,4"/>
                    <TextBlock Grid.Row="0" Grid.Column="2"
                               Text="°C"
                               VerticalAlignment="Center"/>

                    <!-- Arc -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="Arc."
                               Margin="0,4,0,0"
                               VerticalAlignment="Center"/>
                    <ComboBox x:Name="CboArc"
                              Grid.Row="1" Grid.Column="1"
                              Margin="8,4,4,0"
                              Width="60">
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                    </ComboBox>
                </Grid>
            </GroupBox>

            <!-- Tan Delta checkbox -->
            <CheckBox x:Name="ChkTanDelta"
                      Content="Tan Delta"
                      IsChecked="True"
                      Margin="0,0,0,0"
                      Padding="8,4"
                      HorizontalAlignment="Left"
                      Background="#FFE88C8C"/>
        </StackPanel>

        <!-- ====== SPEC TABLE + TORQUE RANGE (PHẢI DƯỚI) ====== -->
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Spec table -->
            <GroupBox Header="Spec."
                      Grid.Row="0"
                      Margin="0,0,0,8">
                <DataGrid x:Name="DgSpec"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          Margin="4">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Spec. Input" Width="*" Binding="{Binding Spec}"/>
                        <DataGridTextColumn Header="Minimum" Width="80" Binding="{Binding Min}"/>
                        <DataGridTextColumn Header="Maximum" Width="80" Binding="{Binding Max}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Torque Range -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <TextBlock Text="Torque Range"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>
                <ComboBox x:Name="CboTorqueRange"
                          Width="70">
                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="5"/>
                    <ComboBoxItem Content="10"/>
                </ComboBox>
            </StackPanel>
        </Grid>

        <!-- ====== NÚT SAVE / EXIT ====== -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,8,0,0">
            <Button x:Name="BtnSave"
                    Content="Save"
                    Width="100"
                    Margin="0,0,40,0"
                    Padding="10,4"
                    Click="BtnSave_Click"
                    Background="#FFFFC0C0"/>
            <Button x:Name="BtnExit"
                    Content="Exit"
                    Width="100"
                    Padding="10,4"
                    Click="BtnExit_Click"
                    Background="#FFB0F0F0"/>
        </StackPanel>
    </Grid>
</Window>
