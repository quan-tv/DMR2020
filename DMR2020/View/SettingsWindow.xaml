<Window x:Class="DMR2020.View.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DMR2020.View"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="320" Width="600">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <!-- Operation/Test mode -->
            <RowDefinition Height="Auto"/>
            <!-- TIC/Language -->
            <RowDefinition Height="Auto"/>
            <!-- Temp / Insert logo -->
            <RowDefinition Height="Auto"/>
            <!-- Company name -->
            <RowDefinition Height="Auto"/>
            <!-- Save button -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== LEFT: OPERATION MODE ===== -->
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,8">
            <TextBlock Text="Operation Mode"
                       Margin="0,0,0,2"/>
            <ComboBox Height="24" SelectedIndex="0">
                <ComboBoxItem Content="1. Door open at finish"/>
                <ComboBoxItem Content="2. Door not open at finish"/>
            </ComboBox>
        </StackPanel>

        <!-- ===== RIGHT: TEST MODE ===== -->
        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,8">
            <TextBlock Text="Test Mode"
                       Margin="0,0,0,2"/>
            <ComboBox Height="24" SelectedIndex="0">
                <ComboBoxItem Content="Rheo Single"/>
                <ComboBoxItem Content="Mooney Single"/>
                <ComboBoxItem Content="Rheo - Mooney"/>
                <ComboBoxItem Content="Rheo - Rheo"/>
                <ComboBoxItem Content="Mooney - Mooney"/>
            </ComboBox>
        </StackPanel>

        <!-- ===== LEFT: TIC SELECT ===== -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,8">
            <TextBlock Text="TIC Select"
                       Margin="0,0,0,2"/>
            <ComboBox Height="24" SelectedIndex="0">
                <ComboBoxItem Content="OMRON"/>
                <ComboBoxItem Content="Autonics"/>
                <ComboBoxItem Content="CompoWay"/>
                <ComboBoxItem Content="HanYoung"/>
                <ComboBoxItem Content="TOHO"/>
                <ComboBoxItem Content="Yokogawa"/>
            </ComboBox>
        </StackPanel>

        <!-- ===== RIGHT: LANGUAGE ===== -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,8">
            <TextBlock Text="Language"
                       Margin="0,0,0,2"/>
            <ComboBox Height="24" SelectedIndex="0">
                <ComboBoxItem Content="English"/>
                <ComboBoxItem Content="Korean"/>
                <ComboBoxItem Content="Chinese"/>
                <ComboBoxItem Content="Japanese"/>
            </ComboBox>
        </StackPanel>

        <!-- ===== LEFT: TEMPERATURE SELECT ===== -->
        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,15,8">
            <TextBlock Text="Temperature Unit"
               Margin="0,0,0,2"/>
            <ComboBox SelectedIndex="0">
                <ComboBoxItem Content="Celsius"/>
                <ComboBoxItem Content="Fahrenheit"/>
            </ComboBox>
        </StackPanel>

        <!-- ===== RIGHT: INSERT LOGO BUTTON ===== -->
        <Button Grid.Row="2" Grid.Column="1"
                Content="Select Logo.."
                Width="110"
                Height="20"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="0,12,0,0"
                BorderBrush="Black"
                />

        <!-- ===== COMPANY NAME (SPAN 2 COLUMNS) ===== -->
        <StackPanel Grid.Row="3" Grid.Column="0"
                    Grid.ColumnSpan="1"
                    Margin="0,8,14,12">
            <TextBlock Text="Company Name"
                       Margin="0,0,0,2"/>
            <TextBox Height="22" Text="" Background="WhiteSmoke"/>
        </StackPanel>

        <!-- ===== SAVE BUTTON ===== -->
        <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                Content="Save"
                Width="170" Height="30"
                HorizontalAlignment="Center"
                />
    </Grid>
</Window>
