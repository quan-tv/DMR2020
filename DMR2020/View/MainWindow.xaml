<Window x:Class="DMR2020.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rheo" Height="600" Width="900" Background="WhiteSmoke">
    <DockPanel>

        <!-- THANH MENU TRÊN CÙNG -->
        <Menu DockPanel.Dock="Top" Background="#FFD8D8D8" Height="30">
            <Menu.Resources>

                <Style x:Key="TopMenuItemStyle" TargetType="MenuItem">
                    <Setter Property="FontFamily" Value="Segoe UI"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Padding" Value="20,4"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="MenuItem">
                                <Border x:Name="Border"
                                        Background="Transparent"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter ContentSource="Header"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border"
                                                Property="Background"
                                                Value="#FFEFEFEF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

            </Menu.Resources>

            <MenuItem Header="Setup" Style="{StaticResource TopMenuItemStyle}" Click="SetupMenuItem_Click"/>
            <MenuItem Header="Report"      Style="{StaticResource TopMenuItemStyle}"/>
            <MenuItem Header="Delete"      Style="{StaticResource TopMenuItemStyle}"/>
            <MenuItem Header="Calibration" Style="{StaticResource TopMenuItemStyle}"/>
            <MenuItem Header="Settings"    Style="{StaticResource TopMenuItemStyle}" Click="SettingsMenuItem_Click"/>

            <!-- COMBOBOX CHỌN CỔNG COM NGAY TRÊN THANH MENU -->
            <ComboBox x:Name="CboComPorts"
                      Width="100"
                      Margin="10,3,10,3"
                      VerticalContentAlignment="Center"/>

            <MenuItem Header="Quit"        Style="{StaticResource TopMenuItemStyle}"
                      Click="QuitMenuItem_Click"/>
        </Menu>

        <StackPanel Margin="6">
            <Button x:Name="BtDebugTest" Content="Debug Test"/>
            <Button x:Name="BtDebugTestDb" Content="Debug Test Db"/>
        </StackPanel>

    </DockPanel>
</Window>
